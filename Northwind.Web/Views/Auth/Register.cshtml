@using Northwind.Web.Models.ViewModel
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
</div>
@*<form class="user">*@

@using (Html.BeginForm("Register", "Auth", FormMethod.Post, htmlAttributes: new { @class = "user" }))
{

    @Html.AntiForgeryToken();

    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @*<input type="text" class="form-control form-control-user" id="exampleFirstName"
                placeholder="First Name">*@

            @Html.LabelFor(x => x.FirstName, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.FirstName, htmlAttributes: new { @class = "form-control form-control-user", placeholder = nameof(Model.FirstName) })
            @Html.ValidationMessageFor(x => x.FirstName, "", htmlAttributes: new { @class = "text-danger" })

        </div>
        <div class="col-sm-6">
            @*<input type="text" class="form-control form-control-user" id="exampleLastName"
                placeholder="Last Name">*@
            @Html.LabelFor(x => x.LastName, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.LastName, htmlAttributes: new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(x => x.LastName, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @*<input type="email" class="form-control form-control-user" id="exampleInputEmail"
            placeholder="Email Address">*@

        @Html.LabelFor(x => x.Email, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "form-control form-control-user", @*type = "email"*@ })
        @Html.ValidationMessageFor(x => x.Email, "", htmlAttributes: new { @class = "text-danger" })
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @*<input type="password" class="form-control form-control-user"
                id="exampleInputPassword" placeholder="Password">*@
            @Html.LabelFor(x => x.Password, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.Password, htmlAttributes: new { @class = "form-control form-control-user", type = "password" })
            @Html.ValidationMessageFor(x => x.Password, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @*<input type="password" class="form-control form-control-user"
                id="exampleRepeatPassword" placeholder="Repeat Password">*@
            @Html.LabelFor(x => x.PasswordConfirm, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(x => x.PasswordConfirm, htmlAttributes: new { @class = "form-control form-control-user", type = "password" })
            @Html.ValidationMessageFor(x => x.Password, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-user btn-block">
        Register Account
    </button>
}
@*</form>*@

<hr>

<div class="text-center">
    <a class="small" href="forgot-password.html">Forgot Password?</a>
</div>
<div class="text-center">
    <a class="small" href="login.html">Already have an account? Login!</a>
</div>

