@using Northwind.Web.Models.Entities
@model List<Product>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@if (TempData["EditSuccessful"] != null)
{
    <div id="alertBox" class="alert alert-success" role="alert">
        @TempData["EditSuccessful"]
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6"><h2> Product List</h2></div>
            <div class="col-6"><a href="/product/add" class="btn btn-success float-right">Add Product</a></div>
        </div>


        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Category Name</th>
                    <th>Quantity Per Unit</th>
                    <th>Unit Price</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.CategoryId</td>
                            <td>@product.QuantityPerUnit</td>
                            <td>@product.UnitPrice</td>
                            <td><a class="btn btn-primary" href="/product/edit/@product.ProductId" title="Edit"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-danger" href="/product/delete/@product.ProductId" title="Delete"><i class="fa fa-trash"></i></a></td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">Listede hiçbir veri bulunmamaktadır</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
