@using Northwind.Web.Models.Entities
@model Product
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@if (TempData["Message"] != null)
{
    <div id="alertBox" class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6"><h2>Add New Product</h2></div>
            <div class="col-6"><a href="/product/list" class="btn btn-success float-right">Product List</a></div>
        </div>

        @if (ViewBag.Message != null)
        {
            <div id="alertBox" class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }

        @using (@Html.BeginForm("Add", "Product", FormMethod.Post, htmlAttributes: new { @class = "" }))
        {
            @Html.AntiForgeryToken();

            <div class="mb-3">
                @Html.LabelFor(x => x.ProductName, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(x => x.ProductName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ProductName, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.CategoryId, htmlAttributes: new { @class = "form-label" })
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CategoryId, "", htmlAttributes: new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.QuantityPerUnit, htmlAttributes: new { @class = "form-label" })
                @Html.TextAreaFor(x => x.QuantityPerUnit, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.QuantityPerUnit, "", htmlAttributes: new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(x => x.UnitPrice, htmlAttributes: new { @class = "form-label" })
                @Html.TextAreaFor(x => x.UnitPrice, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.UnitPrice, "", htmlAttributes: new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        }
    </div>
</div>


