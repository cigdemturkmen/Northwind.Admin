@using Northwind.Web.Models.Entities
@model Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@if (TempData["Message"] != null)
{
    <div id="alertBox" class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6"><h2>Add New Category</h2></div>
            <div class="col-6"><a href="/category/list" class="btn btn-success float-right">Category List</a></div>
        </div>

        @if (ViewBag.Message != null)
        {
            <div id="alertBox" class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }

        @using (@Html.BeginForm("Add", "Category", FormMethod.Post, htmlAttributes: new { @class = "" }))
        {
            //@Html.AntiForgeryToken();

            <div class="mb-3">
                @Html.LabelFor(x => x.CategoryName, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(x => x.CategoryName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CategoryName, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.Description, htmlAttributes: new { @class = "form-label" })
                @Html.TextAreaFor(x => x.Description, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Description, "", htmlAttributes: new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        }
    </div>
</div>

